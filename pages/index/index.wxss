/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.show{
  display: block;
  margin-top: 20rpx;
}

.show_title{
}

.response {
  position: relative;
  padding: .23rem 0;
  margin: 0 .39rem;
  background-color: #f9f9f9;
  overflow: auto;
  border-bottom: 1px solid #e6e6e6;
  font-size: 0;
}

.response_img {
    position: relative;
    width: 100rpx;
    height: 120rpx;
    overflow: hidden;
    display: inline-block;
    vertical-align: middle;
}

.response_content {
  display: inline-block;
  font-size: 40rpx;
  color: #222;
  line-height: 1.5;
  word-wrap: break-word;
  text-align: justify;
}
